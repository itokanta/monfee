<div>
  月謝計算
</div>
<%= search_form_for @q, url: student_attendances_search_path do |f| %>
  <%= f.search_field :entry_gteq %>から
  <%= f.search_field :entry_lteq %>まで
  <br>
  <%= f.submit '検索' %>
<% end %>

<% if @sum.length != 0 %>
  <% sum_fee = 0%>
  <% @sum.each do |sum| %>
    <br>
    <li>
      <%= sum.entry %>・・・
      <%= sum.fee %>円
      <% sum_fee += sum.fee %>
    </li>
  <% end %>
  合計<%= sum_fee %>円
<% else %>
  <%= "値が存在しません" %>
<% end %>