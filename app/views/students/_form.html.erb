<%= form_with model: student, local: true do |f|%>
  <div class='field'>
    <div class='field-label'>
      <%= f.label :name, "生徒名"%>
    </div>
    <div class='field-input'>
      <%= f.text_field :name, autofocus: true%>
    </div>
  </div>
  <div class='field'>
    <div class='field-label'>
      <%= f.label :age, "年齢"%>
    </div>
    <div class='field-input'>
      <%= f.text_field :age%>
    </div>
  </div>
  <div class='field'>
    <div class='field-label'>
      <%= f.label :guardian_name, "保護者名"%>
    </div>
    <div class='field-input'>
      <%= f.text_field :guardian_name%>
    </div>
  </div>
  <div class='field'>
    <div class='field-label'>
      <%= f.label :phone_number, "電話番号"%>
    </div>
    <div class='field-input'>
      <%= f.text_field :phone_number%>
    </div>
  </div>
  <div class='actions'>
    <%= f.submit "登録", class: 'btn btn-primary'%>
    <% if student.persisted? %>
      <%= link_to "戻る", student_path(student), class: 'btn btn-secondary' %>
    <% else %>
      <%= link_to "戻る", root_path, class: 'btn btn-secondary' %>
    <% end %>
  </div>
<% end %>