<div class="main">
  <div class="inner">
    <h1>月謝プラン管理</h1>
    
    <%= link_to "新規プラン作成", new_fee_plan_path, class: "btn btn-primary", style: "margin-bottom: 20px;" %>
    <%= link_to "生徒一覧に戻る", root_path, class: "btn btn-secondary", style: "margin-bottom: 20px;" %>
    
    <div class="fee-plans-table-wrapper">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>プラン名</th>
            <th>金額</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @fee_plans.each do |fee_plan| %>
            <tr>
              <td><%= fee_plan.name %></td>
              <td class="amount-cell"><%= number_to_currency(fee_plan.amount, unit: "¥", precision: 0) %></td>
              <td class="center">
                <%= link_to "編集", edit_fee_plan_path(fee_plan), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "削除", fee_plan_path(fee_plan), 
                            class: "btn btn-sm btn-outline-danger", 
                            data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
