<div class="main">
  <div class="inner">
    <h1>新規月謝プラン作成</h1>
    
    <%= form_with model: @fee_plan, local: true do |f| %>
      <% if @fee_plan.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @fee_plan.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :name, "プラン名" %>
        <%= f.text_field :name, class: "form-control", placeholder: "例：月4回コース" %>
      </div>
      
      <div class="form-group">
        <%= f.label :amount, "金額（円）" %>
        <%= f.number_field :amount, class: "form-control", placeholder: "例：8000" %>
      </div>
      
      <div class="form-actions">
        <%= f.submit "作成", class: "btn btn-primary" %>
        <%= link_to "キャンセル", fee_plans_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
